<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".presentation.view.DetalhesActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatingSalvar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/cardViewImagem"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="-30dp"
                android:src="@drawable/nao_favorito"
                app:backgroundTint="?attr/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewImagem"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/imagemFilmeDetalhes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_imagem" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textViewNomeDetalhes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardViewImagem"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:layout_toStartOf="@id/floatingSalvar"
                android:text="Nome do Pacote"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="monospace"/>

            <TextView
                android:id="@+id/textViewDataDetalhes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewNomeDetalhes"
                android:layout_alignTop="@+id/textViewNotaDetalhes"
                android:layout_alignBottom="@+id/textViewNotaDetalhes"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:layout_toStartOf="@id/textViewNotaDetalhes"
                android:text="Data"
                android:gravity="center_vertical"
                android:textColor="@color/corCinza"
                android:textSize="14sp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/textViewGeneroDetalhes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewNotaDetalhes"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:text="Gêneros Gêneros Gêneros Gêneros"
                android:textColor="@color/white"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/textViewNotaDetalhes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewNomeDetalhes"
                android:layout_alignParentRight="true"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:text="Nota"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/textViewDescricaoDetalhes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewGeneroDetalhes"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:text="Descrição"
                android:textColor="@color/corCinza"
                android:textSize="16sp"
                android:typeface="serif"
                android:justificationMode="inter_word"/>
        </RelativeLayout>
    </ScrollView>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarDetalhes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:title=" " />

</androidx.constraintlayout.widget.ConstraintLayout>