<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.DetalhesActivity"
    android:background="@color/background">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imagemFilmeDetalhes"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_baseline_favorite_24"
                app:layout_constraintEnd_toEndOf="parent"
                android:backgroundTint="@color/corCinza"
                android:id="@+id/floatingSalvar"/>

            <ImageView
                android:id="@+id/imagemFilmeDetalhes"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/textViewNomeDetalhes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imagemFilmeDetalhes"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Nome do Pacote"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/textViewGeneroDetalhes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewNomeDetalhes"
                android:layout_marginHorizontal="16dp"
                android:text="Gêneros"
                android:textSize="16sp"
                android:typeface="monospace"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/textViewNotaDetalhes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewNomeDetalhes"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="8dp"
                android:text="Nota"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                android:gravity="center_horizontal"
                android:typeface="monospace"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/textViewDescricaoDetalhes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewNotaDetalhes"
                android:layout_marginHorizontal="16dp"
                android:text="Descrição"
                android:textSize="14sp"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </ScrollView>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarDetalhes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:title=" " />

</androidx.constraintlayout.widget.ConstraintLayout>