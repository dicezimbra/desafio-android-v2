<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginBottom="8dp"
    android:paddingRight="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewFavorito"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/imagemFavorito"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textViewNomeFavorito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/cardViewFavorito"
        android:text="@string/titulo_filme"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewAnoLancamentoFavorito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewNomeFavorito"
        android:layout_marginVertical="4dp"
        android:layout_toEndOf="@+id/cardViewFavorito"
        android:singleLine="true"
        android:text="@string/data_lancamento"
        android:textColor="@color/corCinza"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textViewDescricaoFavorito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewAnoLancamentoFavorito"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/cardViewFavorito"
        android:maxLines="3"
        android:text="@string/descricao"
        android:textColor="@color/corCinza"
        android:textSize="14sp" />

    <Button
        android:id="@+id/buttonFavorito"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/cardViewFavorito"
        android:text="@string/desfavoritar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>